generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiData {
  id               Int     @id @default(autoincrement())
  lastBlockFetched BigInt
}

model UserData {
  userAddress      String   @id
  userBalance      BigInt?
  userTokenBalance  BigInt?
}

model Event {
  id          Int     @id @default(autoincrement())
  eventName   String
  txHash      String
  from        String?
  to          String?
  owner       String?
  spender     String?
  value       String
  blockNumber String
  isFromWebSocket Boolean  @default(false)
}

model DailyTransfers {
  date        DateTime  @id
  totalTransfers String
}
